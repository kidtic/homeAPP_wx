/* pages/config/config.wxss */
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo{
  height: 180rpx;
  width: 100%;
  background: #66ccff;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
  padding-left: 150rpx;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar[size] {
  width: 100rpx;
}


.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  text-align: left;
  padding-left: 40rpx;
  float: left;
}

.userinfo-nickname::after {
  border: none;
}

.userinfo-nickname-wrapper {
  width: 40%;
  flex:1;
}